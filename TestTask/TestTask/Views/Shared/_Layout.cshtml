<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="~/Home/ListStudent/Standart/1">List Student</a></li>
                    <li><a href="~/Home/ListTeacher/Standart/1">List Teacher</a></li>
                    <li>@Html.ActionLink("Statistic", "Statistic", "Home")</li>
                    <li><header style="color:white"><h6 class="fortime"></h6> Количество студентов:@TestTask.Controllers.HomeController.ReturnCountStudent() Количество учителей:@TestTask.Controllers.HomeController.ReturnCountTeacher()
                        </header>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()
        <h4 id="fortime"></h4>
        <hr />
        <footer class="fortime">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <p>Количество студентов:@TestTask.Controllers.HomeController.ReturnCountStudent()</p>
            <p>Количество учителей:@TestTask.Controllers.HomeController.ReturnCountTeacher()</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        function GetDate() {
            var date = new Date();
            TextDate = date.getTime();
            $('.time').each(function () { $(this).remove(); });
            $('.fortime').each(function () { $(this).add('<p class ="time">' + date + "</p>").appendTo($(this)); });
        }
        setInterval(GetDate, 100);
    </script>
</body>
</html>
